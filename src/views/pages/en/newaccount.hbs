{{>en/langSelector}}
<h1 class="font-family-title">Switch Remote Control</h1>
<section class="register-form">
    <section class="forms">
        <form action="/en/authentication/register" method="POST">
            <section class="body-form">
                <section class="title-form">
                    <h2>Registration Form</h2>
                </section>
                <section class="menu-form">
                    <input type="text" name="fullname" placeholder="full name">
                    <br>
                    <input type="email" name="email" placeholder="e-mail">
                    <br>
                    <input type="text" name="username" placeholder="user">
                    <br>
                    <input type="password" name="password" placeholder="password">
                </section>
                <section class="bottom-form">
                    <button type="submit">Create new account</button>
                </section>
            </section>
        </form>
        <button class="btn-redirect" onclick="window.location.href='/en';">I have account</button>
    </section>
</section>
{{>en/signature}}